
export PROJECT=dev_rpi3_64_glibc_labs
export PROJECT_BUILD=`pwd`/build
export PROJECT_ROOT=${PROJECT_BUILD}/${PROJECT}

mkdir -p ${PROJECT_ROOT}/{bootloader/data,build-tools/data,download,\
doc,images,kernel/data,project,rootfs,sysapps/data,tmp,tools,bin}

# Tools
cp `pwd`/scripts/common/list-libs.sh ${PROJECT_ROOT}/bin

# Toolchain
cp `pwd`/scripts/common/crosstool-ng.sh ${PROJECT_ROOT}/bin
cp `pwd`/scripts/rpi3_64_glibc/verify-toolchain.sh ${PROJECT_ROOT}/bin
cp `pwd`/data/rpi3_64_glibc/crosstool-ng.config ${PROJECT_ROOT}/build-tools/data
cp `pwd`/data/common/hello.c ${PROJECT_ROOT}/build-tools/data
cp `pwd`/data/common/Makefile ${PROJECT_ROOT}/build-tools/data

# U-Boot
cp `pwd`/scripts/rpi3_64_glibc/u-boot.sh ${PROJECT_ROOT}/bin
cp `pwd`/data/rpi3_64_glibc/u-boot.config ${PROJECT_ROOT}/bootloader/data

# Firmware
cp `pwd`/scripts/rpi3_64_glibc/firmware.sh ${PROJECT_ROOT}/bin

# Linux kernel
cp `pwd`/scripts/common/kernel.sh ${PROJECT_ROOT}/bin
cp `pwd`/data/rpi3_64_glibc/linux.config ${PROJECT_ROOT}/kernel/data

# Busybox
cp `pwd`/scripts/common/busybox.sh ${PROJECT_ROOT}/bin
cp `pwd`/data/common/busybox.config ${PROJECT_ROOT}/sysapps/data

cat > ./build/dev_rpi3_64_glibc << "EOF"
export PROJECT=dev_rpi3_64_glibc_labs
export PROJECT_ROOT=`pwd`/${PROJECT}
export ARCH=arm64
export TARGET=aarch64-rpi3-linux-gnu
export CROSS_COMPILE=${TARGET}-
export PREFIX=${PROJECT_ROOT}/tools
export TARGET_PREFIX=${PREFIX}/${TARGET}
export PATH=${TARGET_PREFIX}/bin:${PROJECT_ROOT}/bin:${PATH}
export KERNEL_IMAGE=Image
export KERNEL_PATH=${PROJECT_ROOT}/kernel/linux-stable/arch/${ARCH}/boot
export DTB_IMAGE=bcm2837-rpi-3-b.dtb
export DTB_PATH=${KERNEL_PATH}/dts/broadcom
export UBOOT_IMG=u-boot.bin
export UBOOT_PATH=${PROJECT_ROOT}/bootloader/u-boot
cd ${PROJECT_ROOT}
EOF
