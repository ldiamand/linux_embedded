
export PROJECT=dev_rpi3_64_glibc_labs
export PROJECT_ROOT=`pwd`/build/${PROJECT}

mkdir -p ${PROJECT_ROOT}/{bootloader/data,build-tools/src,build-tools/data,\
doc,images,kernel/data,project,rootfs,sysapps,tmp,tools,bin}

cp `pwd`/scripts/common-data/crosstool-ng.sh ${PROJECT_ROOT}/build-tools
cp `pwd`/scripts/rpi3_64_glibc-data/verify-toolchain.sh ${PROJECT_ROOT}/build-tools
cp `pwd`/scripts/rpi3_64_glibc-data/crosstool-ng.config ${PROJECT_ROOT}/build-tools/data
cp `pwd`/scripts/common-data/hello.c ${PROJECT_ROOT}/build-tools/data
cp `pwd`/scripts/common-data/Makefile ${PROJECT_ROOT}/build-tools/data

cp `pwd`/scripts/common-data/u-boot.sh ${PROJECT_ROOT}/bootloader
cp `pwd`/scripts/rpi3_64_glibc-data/u-boot.config ${PROJECT_ROOT}/bootloader/data

cp `pwd`/scripts/rpi3_64_glibc-data/firmware.sh ${PROJECT_ROOT}/bootloader

cp `pwd`/scripts/common-data/kernel.sh ${PROJECT_ROOT}/kernel
cp `pwd`/scripts/rpi3_64_glibc-data/linux.config ${PROJECT_ROOT}/kernel/data

cat > ./build/dev_rpi3_64_glibc << "EOF"
export PROJECT=dev_rpi3_64_glibc_labs
export PROJECT_ROOT=`pwd`/${PROJECT}
export ARCH=arm64
export TARGET=aarch64-rpi3-linux-gnu
export CROSS_COMPILE=${TARGET}-
export PREFIX=${PROJECT_ROOT}/tools
export TARGET_PREFIX=${PREFIX}/${TARGET}
export PATH=${TARGET_PREFIX}/bin:${PROJECT_ROOT}/bin:${PATH}
export KERNEL_IMAGE=Image
export KERNEL_PATH=${PROJECT_ROOT}/kernel/linux-stable/arch/${ARCH}/boot
export DTB_IMAGE=bcm2837-rpi-3-b.dtb
export DTB_PATH=${KERNEL_PATH}/dts/broadcom
export UBOOT_IMG=u-boot.bin
export UBOOT_PATH=${PROJECT_ROOT}/bootloader/u-boot
cd ${PROJECT_ROOT}
EOF
